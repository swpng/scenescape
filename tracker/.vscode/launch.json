{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Tracker: Attach to gdbserver (container)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build-debug/tracker",
            "cwd": "${workspaceFolder}",
            "MIMode": "gdb",
            "miDebuggerServerAddress": "localhost:2345",
            "miDebuggerPath": "/usr/bin/gdb",
            "stopAtEntry": false,
            "setupCommands": [
                {
                    "description": "Enable pretty-printing",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "sourceFileMap": {
                "/scenescape/tracker": "${workspaceFolder}"
            }
        },
        {
            "name": "Tracker: Debug local build",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build-debug/tracker",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}
